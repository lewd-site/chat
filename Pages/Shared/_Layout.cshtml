<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>Chat</title>

    <link rel="stylesheet" href="~/main.css" />

    <script src="~/main.js" async defer></script>
</head>

<body class="bg-gray-dark text-white">
    <div class="layout relative mx-auto">
        <header class="header">
            <div class="flex items-center">
                <button class="header-button">
                    <span class="header-notify"></span>
                </button>

                <span class="header-divider"></span>

                <button class="header-button">
                    <span class="header-link"></span>
                </button>

                <button class="header-button">
                    <span class="header-image"></span>
                </button>
            </div>

            <div class="flex items-center">
                <button class="px-5 py-2 text-sm hover:bg-gray-darker">Регистрация</button>
                <button class="px-5 py-2 text-sm hover:bg-gray-darker">Войти</button>

                <span class="header-divider"></span>

                <button class="header-button">
                    <span class="header-settings"></span>
                </button>
            </div>
        </header>

        <aside class="sidebar">
            @await Component.InvokeAsync("Sidebar")
        </aside>

        <main class="pt-10">
            @RenderBody()
        </main>
    </div>
</body>

</html>
